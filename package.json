{
    "name": "usequel",
    "productName": "usequel",
    "version": "1.0.0",
    "description": "My Electron application description",
    "main": ".webpack/main",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts ."
    },
    "keywords": [],
    "author": {
        "name": "Joshua Doncaster-Marsiglio",
        "email": "jmarsiglio@gmail.com"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "usequel"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/app/renderer/index.html",
                                    "js": "./src/app/renderer/entrypoint.tsx",
                                    "name": "main_window",
                                    "preload": {
                                        "js": "./src/app/renderer/ipcPreload.ts"
                                    }
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@electron-forge/plugin-webpack": "6.0.0-beta.54",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@tophat/eslint-config": "^0.8.0",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "css-loader": "^4.2.1",
        "electron": "12.0.2",
        "electron-devtools-installer": "git+https://github.com/MarshallOfSound/electron-devtools-installer.git",
        "eslint": "^7.24.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.3.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "fork-ts-checker-webpack-plugin": "^5.0.14",
        "node-loader": "^1.0.1",
        "prettier": "^2.2.1",
        "style-loader": "^1.2.1",
        "ts-loader": "^8.0.2",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.5.1",
        "@types/react-redux": "^7.1.16",
        "@types/styled-components": "^5.1.9",
        "electron-squirrel-startup": "^1.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.3",
        "redux": "^4.0.5",
        "redux-saga": "^1.1.3",
        "styled-components": "^5.2.3"
    },
    "resolutions": {
        "styled-components": "^5"
    }
}
